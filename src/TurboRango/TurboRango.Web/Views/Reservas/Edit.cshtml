@model TurboRango.Web.Models.ReservaRestaurante

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Reserva</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Reserva.Id)
        @Html.HiddenFor(model => model.Reserva.idRestaurante)

        <div class="row">
            <div class="col-xs-2 text-right">
                <label>Restaurante</label>
            </div>
            <div class="col-md-10 text-left">
                @Model.Restaurante.Nome
            </div>
            
        </div>
        <br /><br />
        <div class="form-group">
            @Html.LabelFor(model => model.Reserva.QtdPessoas, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Reserva.QtdPessoas, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Reserva.QtdPessoas, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Reserva.ValorTotal, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Reserva.ValorTotal, new { htmlAttributes = new { @class = "form-control", @value = "0" } })
                @Html.ValidationMessageFor(model => model.Reserva.ValorTotal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Reserva.Data, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Reserva.Data, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Reserva.Data, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.Turno, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Turno, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Turno, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            <label class="control-label col-md-2" for="Reserva_Turno">Turno</label>
            <div class="col-md-10">
                <select class="form-control" name="Reserva.Turno" required>
                    <option value="">-- Selecione --</option>
                    <option value="MeioDia">Meio-Dia</option>
                    <option value="Noite">Noite</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @*@Html.ActionLink("Back to List", "Index")*@
    <a href="/Reservas"><button class="btn btn-default">Voltar a Lista</button></a>
    
</div>
@section scripts{
    <script>
    $('#Reserva_QtdPessoas').focusout(function () {

        var qtd = $(this).val() * 10;

        $('#Reserva_ValorTotal').val(qtd);
    });
    </script>
}